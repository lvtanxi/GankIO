<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?actionBarItemBackground"
        android:padding="@dimen/item_content_padding"
        >
        <ImageView
            android:id="@+id/iv_daily"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_gray"/>

        <TextView
            android:id="@+id/tv_title_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_daily"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/iv_daily"
            android:layout_toRightOf="@id/iv_daily"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/item_title_tv"
            />


        <com.haozhang.lib.SlantedTextView
            android:id="@+id/tv_type_daily"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:slantedBackgroundColor="@color/colorAccent"
            app:slantedMode="right_triangle"
            android:layout_alignParentRight="true"
            app:slantedLength="28dp"
            app:slantedTextSize="10sp"
            app:slantedText="SWIFT"/>

        <TextView
            android:id="@+id/tv_date_daily"
            style="@style/WrapWrap"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/item_date"
            android:textSize="@dimen/item_date_tv"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>