<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    style="@style/MatchWrap"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp">

    <RelativeLayout
        style="@style/MatchWrap"
        android:background="?actionBarItemBackground"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/tv_title"
            style="@style/MatchWrap"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:textColor="@color/black"
            android:textSize="@dimen/item_title_tv"/>

        <TextView
            android:id="@+id/tv_author"
            style="@style/WrapWrap"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="9dp"
            android:paddingEnd="4dp"
            android:paddingLeft="0dp"
            android:paddingRight="4dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/item_via_tv"
            android:textStyle="italic"
            android:typeface="serif"/>


            <TextView
                android:id="@+id/tv_type"
                style="@style/WrapWrap"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/tv_author"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_data_tag"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/item_tag_tv"/>


        <TextView
            android:id="@+id/tv_date"
            style="@style/WrapWrap"
            android:layout_alignBottom="@id/tv_type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="222"
            android:textColor="@color/item_date"
            android:textSize="@dimen/item_date_tv"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>